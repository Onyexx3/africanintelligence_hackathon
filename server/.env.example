# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/africanintelligence-lms
# For production, use MongoDB Atlas connection string:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/africanintelligence-lms

# Server Configuration
PORT=8080
NODE_ENV=development
FRONTEND_URL=http://localhost:5173
# For production:
# FRONTEND_URL=https://yourdomain.com

# JWT Configuration (CRITICAL - Generate a secure random string)
# Generate using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-jwt-secret-64-character-random-hex-string-here

# Web Push Configuration (REQUIRED for notifications)
# Generate VAPID keys: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your-vapid-public-key-here
VAPID_PRIVATE_KEY=your-vapid-private-key-here

# Google OAuth Configuration (REQUIRED for Google login)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Configuration (OPTIONAL - for contact form and notifications)
# If not configured, contact messages will still be saved to database
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
ADMIN_EMAIL=admin@africanintelligence.com

# Google Cloud Storage (REQUIRED for file uploads)
GCS_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_NAME=your-bucket-name
GCS_KEY_FILE=path/to/your/service-account-key.json
# OR use GCS_CREDENTIALS as JSON string for deployment

# Redis Configuration (OPTIONAL - for caching, improves performance)
# REDIS_URL=redis://localhost:6379

# Logging Level (OPTIONAL)
LOG_LEVEL=info
